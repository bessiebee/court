<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.bessie.courtcounterapp.MainActivity"
    android:background="@drawable/bb"
    >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:orientation="horizontal"
            android:layout_weight="0"
            tools:context="com.example.bessie.courtcounterapp.MainActivity"
            >
           <LinearLayout
              android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:gravity="clip_horizontal"
                android:padding="14dp"
                android:id="@+id/teamA_Text_view"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold"
                android:textSize="40sp"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="0"
                android:gravity="clip_horizontal"
                android:padding="14dp"
                android:textSize="58sp"
                android:id="@+id/score_Text_View"
                android:textColor="@android:color/holo_orange_dark"
                android:layout_margin="24dp"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="+3 Points"
                android:layout_margin="14dp"
                android:id="@+id/btn_score"
                android:onClick="setTvScore"/>

            <Button
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:text="+2 Points"
                android:layout_margin="14dp"
                android:id="@+id/btnscores"
                android:onClick="setBtnscores"/>

            <Button
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:text="Free throw"
                android:layout_margin="14dp"
                android:id="@+id/btnscoress"
                android:onClick="setBtnscoress"
                />

           </LinearLayout>




            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team B"
                    android:gravity="clip_horizontal"
                    android:padding="14dp"
                    android:id="@+id/teamB_Text_view"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="0"
                    android:gravity="clip_horizontal"
                    android:padding="14dp"
                    android:textSize="58sp"
                    android:id="@+id/scoreB_Text_View"
                    android:textColor="@android:color/holo_orange_dark"
                    android:layout_margin="24dp"/>

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="+3 Points"
                    android:layout_margin="14dp"
                    android:id="@+id/btnscoreB"
                    android:onClick="setTvScoreB"/>

                <Button
                    android:layout_width="149dp"
                    android:layout_height="wrap_content"
                    android:text="+2 Points"
                    android:layout_margin="14dp"
                    android:id="@+id/btnscoresB"
                    android:onClick="setBtnscoresB"/>

                <Button
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:text="Free throw"
                    android:layout_margin="14dp"
                    android:id="@+id/btnscoressB"
                    android:onClick="setBtnscoressB"
                    />

            </LinearLayout>
        </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_gravity="center|bottom"
        android:id="@+id/btnReset"
        android:onClick="setBtnReset"
        android:layout_weight="1"
        />
</LinearLayout>
